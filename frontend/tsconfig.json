{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,

    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",  
    "paths": {
      "@/*": ["*"],
      "@services/*": ["services/*"], 
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
